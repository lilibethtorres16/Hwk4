<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Custom AppInfo TextView theme. -->
    <style name="AppInfoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/sand8</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Custom entire rainbow app theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Orange</item>
        <item name="colorPrimaryDark">@color/Red</item>
        <item name="colorAccent">@color/Lime_Green</item>>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:windowBackground">@color/Yellow</item>
        <item name="actionBarSize">50dp</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/Light_Blue</item>
        <item name="android:editTextColor">@color/Lavender</item>
        <!--<item name="android:titleTextColor">@color/Lavender</item>-->
        <!-- using sdk 23 creates issues in my laptop -->
    </style>
    <!-- Sand theme. -->
    <style name="SandTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sand7</item>
        <item name="colorPrimaryDark">@color/sand6</item>
        <item name="colorAccent">@color/sand8</item>>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:windowBackground">@color/sand1</item>
        <item name="actionBarSize">50dp</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="android:textColor">@color/sand4</item>
        <item name="android:editTextColor">@color/sand3</item>
        <!--<item name="android:titleTextColor">@color/Lavender</item>-->
        <!-- using sdk 23 creates issues in my laptop -->
    </style>
    <!--ImageView Style-->
    <style name="ImageView" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/sand8</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
